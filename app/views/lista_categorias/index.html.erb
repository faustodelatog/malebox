                <div class="mask mask-2"> </div>
                <div class="content">
                  <h2><%= categoria.nombre %></h2>
                  <p><%= categoria.nombre %></p>
                </div>
              </a> </div>
              <h4 class="m_4"><a href="productos?categoria=<%= categoria.id %>"><%= categoria.nombre %></a></h4>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>