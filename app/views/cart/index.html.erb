<div class="modal fade" id="tapasModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <%= form_for(@tapa, remote: true, url: add_tapa_personalizada_path) do |f| %>
      <input id="productIdHidden" type="hidden" name="product_id" />
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Escoje tu tapa</h4>
        </div>
        <div class="modal-body">
            <% Tapa.all.each do |tapa| %>
              <div class="col-md-6">
                <input value="<%= tapa.id %>"
                  type="radio" name="tapa_id" 
                  id="tapa<%= tapa.id %>" class="input-hidden" />
                <label for="tapa<%= tapa.id %>"
                    onclick="changeVariables('<%= tapa.variables %>');">
                  <img class="img-responsive" style="width:80%; margin:auto;"
                    src="<%= tapa.url %>" 
                    alt="<%= tapa.nombre %>" />
                </label>
              </div>
            <% end %>
        </div>

          <div class="form-group" style="padding:10px">
            <span>Escribe aquí como personalizamos tu empaque</span><label id="variablesTapa"></label>
            <textarea id="variablesTapaInput" name="tapa_variables" style="height:100px" name="variables" class="form-control"></textarea>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  function changeVariables(variables){
    $('#variablesTapa').html(variables);
    text = variables.split(',').map(v => v + ': ').join('\n');
    $('#variablesTapaInput').val(text);
  }
</script>

