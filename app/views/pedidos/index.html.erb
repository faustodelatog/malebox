<p id="notice"><%= notice %></p>

<h1>Listado de Pedidos</h1>

<div id="filtros">
  <form action="<%= pedidos_path %>">
      <div class="col-md-4">
        <label class="col-form-label-sm">Estado</label>
        <select class="form-control" name="estado">
            <option value="">TODOS></option>
          <% @estados.each do |estado| %>
            <option value="<%= estado.upcase %>"><%= estado.upcase %></option>
          <% end %>
          </select>
      </div>
      <div class="col-md-4">
        <label class="col-form-label-sm">Desde</label>
        <input class="form-control" type="text" name="from" value="<%= @from %>" />
      </div>
      <div class="col-md-4">
        <label class="col-form-label-sm">Hasta</label>
        <input class="form-control" type="text" name="to" value="<%= @to %>" />
      </div>
      <div class="col-md-12">
          <label class="col-form-label-sm"></label>
        <button type="submit" class="btn btn-primary btn-block">Filtrar</button>
      </div>
  </form>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Horario de entrega</th>*
      <th>Costo entrega</th>
      <th>Nombre entrega</th>
      <th>De</th>
      <th>Para</th>
      <th>Mensaje</th>
      <th>Sector entrega</th>
      <th>Direccion entrega</th>
      <th>Instrucciones entrega</th>
      <th>Fecha entrega</th>
      <th>Forma de Pago</th>
      <th>Precio</th>
      <th>Estado</th>
      <th>Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.fecha %></td>
        <td><%= pedido.nombre %></td>
        <td><%= pedido.email %></td>
        <td><%= pedido.telefono %></td>
        <td><%= pedido.horario_entrega %></td>
        <td><%= pedido.costo_entrega %></td>
        <td><%= pedido.nombre_entrega %></td>
        <td><%= pedido.de %></td>
        <td><%= pedido.para %></td>
        <td><%= pedido.mensaje %></td>
        <td><%= pedido.sector_entrega %></td>
        <td><%= pedido.direccion_entrega %> <a target="_blank" href="<%= pedido.ubicacion %>" >Ver en mapa</a> </td>
        <td><%= pedido.instrucciones_entrega %></td>
        <td><%= pedido.fecha_entrega.to_s %></td>
        <td><%= pedido.forma_pago_str %></td>
        <td><%= pedido.total %></td>
        <td><span class="<%= pedido.estado.downcase %>_label"><%= pedido.estado %></span></td>
        <td>
          <% pedido.items_json.each do |item| %>
          <div>
            <img src="<%= item.producto.foto_url %>" width="100" /> <%= item.cantidad %> - <%= item.producto.nombre %>
          </div>
          <% end %>
        </td>
        <td><%= link_to 'Show', pedido, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
