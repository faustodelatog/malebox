<p id="notice"><%= notice %></p>

<h1>Listado de Productos</h1>

<%= link_to 'New Producto', new_admin_producto_path, :class => 'btn btn-primary' %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Orden</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Foto</th>
      <th>Precio</th>
      <th>Ciudades mismo d√≠a</th>
      <th>Empaque</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.orden %></td>
        <td><%= producto.nombre %></td>
        <td><%= producto.descripcion.html_safe %></td>
        <td><img src="<%= producto.foto_url %>" width="100" /></td>
        <td><%= producto.precio %></td>
        <td><%= producto.ciudadesMismoDia %></td>
        <td><%= producto.empaque ? producto.empaque.nombre : '' %></td>
        <td><%= link_to 'Show', admin_producto_path(producto), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_producto_path(producto), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', admin_producto_path(producto), :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>